<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :email, "E-mailadres: *", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, "Soort autoklus: *", :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:category, [["Uitlaat",1],["Verlichting",2]], :prompt => "Selecteer") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, "Titel van de opdracht: *", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'input-xxlarge', :placeholder => "Voorbeeld: Uitlaat van Volkswagen Golf 4 moet vervangen worden voor APK." %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :license_plate, "Kenteken: *", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :license_plate, :class => 'input-small' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Doorgaan naar stap 2", :class => 'btn btn-primary', :name => "to_step2" %>
    <p><em>Je kunt de opdracht altijd nog wijzigen</em></p>
  </div>
<% end %>
